<%- layout("/layouts/boilerplate") %>
<body>
  <div class="row">
    <div class="col-6 offset-3">
      <h3>Listing Details :</h3>
      <div class="listing-card">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top show-img"
          alt="listing-img"
        />
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b></p>
          <br />
          <% if (listing.owner && listing.owner.username) { %>
          <i><%= listing.owner.username %></i>
          <% } else { %>
          <i>Owner information not available</i>
          <% } %> 
          <%= listing.description %> <br />

          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </div>
      </div>

      <br />

      <% if (currUser && currUser._id.equals(listing.owner._id)) { %>
      <div class="btns">
        <a
          href="/listings/<%= listing._id %>/edit"
          class="btn btn-dark offset-2 mb-3"
          >Edit</a
        >
        <form
          method="POST"
          action="/listings/<%= listing._id %>?_method=DELETE"
        >
          <button class="btn btn-dark offset-4 mb-3">Delete</button>
        </form>
      </div>
      <% } %>
    </div>

    <div class="col-8 offset-3">
      <% if (currUser) { %>
      <h4>Leave a Review</h4>
      <form
        action="/listings/<%= listing.id %>/reviews"
        method="POST"
        novalidate
        class="needs-validation"
      >
        <div class="mb-3 mt-3">
          <fieldset class="starability-slot">
            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="0"
              checked
              aria-label="No rating."
            />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3 mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="30"
            rows="10"
            class="form-control"
            required
          ></textarea>
          <div class="invalid-feedback">Please add a comment</div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>

      <hr />

      <p><b>All Reviews</b></p>
      <div class="row">
        <% for (let review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <% if (review.author && review.author.username) { %>
              <h5 class="card-title"><%= review.author %></h5>
            <% } else { %>
              <h5 class="card-title">Anonymous</h5>
            <% } %>
            <p class="card-text"><%= review.comment %></p>
            <p class="starability-result card-text" data-rating="<%= review.rating %>">
              Rated <%= review.rating %> stars
            </p>
          </div>
          <form
            class="mb-3"
            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    </div>
      <div class="col-8 offset-3 mb-3">
        <h3>Where you'll be</h3>
        <div class="map">
 
      </div>
    </div>
    
  </div>
